extends base

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.action__btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST" enctype="multipart/form-data")
            label(for="video") Video File 
            input(name="video" type="file" accept="video/*" required id="video")
            label(for="thumb") Thumbnail File 
            input(name="thumb" type="file" accept="image/*" required id="thumb")
            input(name="title" type="text" placeholder="Title" maxlength=60)
            input(name="description" type="text" placeholder="Description" minlength=10)
            input(name="hashtags" type="text", placeholder="Hashtags, separated by comma.")
            input(type="submit" value="Upload")

block scripts 
    script(src="/static/js/recorder.js") 