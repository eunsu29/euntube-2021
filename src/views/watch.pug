                    i.fas.fa-play
            div.videoControls__volume
                input(type="range" step="0.05" min="0" max="1" value=0.5)#volume
                span#mute
                    i.fas.fa-volume-up
                div.videoControls__time
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 00:00:00
            input(type="range" step="0.01" min="0" value=0)#timeline.videoControls__timeline
